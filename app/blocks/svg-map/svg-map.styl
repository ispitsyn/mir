.svg-map
	display block
	background-position 50% 50%
	background-size cover
	&_type
		&_housing
			height 780px
		&_floor
			position relative
			margin-top 4%
			margin-right 123px
			margin-bottom 4%
			margin-left 123px
			display inline-block
	.arrow__right
		right -25%
		transform translateY(-50%)
	.arrow__left
		left -80px
		transform translateY(-50%) rotate(-180deg)
.arrow
		position absolute
		top 50%		
		width 11px
		height 45px
		content ''	
		background-image url('/icons/arrow.png')
		opacity .7
		&:hover
			cursor pointer
			opacity 1