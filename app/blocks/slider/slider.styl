.slider
	position relative
	z-index 1
	user-select none
.slider__stage-outer
	position relative
	overflow hidden
	height 100%
.slider__stage
	position relative
	-ms-touch-action pan-Y
	touch-action manipulation
	-moz-backface-visibility hidden
.slider_loaded_true
	display block
.slider__dot
	background transparent
	border 2px solid #fff
	border-radius 50%
.slider__dot
	margin-bottom 12px
	width 8px
	height 8px
.slider__dot.active
	background #ffffff
.disabled
	display none
.slider_loaded_true
	height 100%
.slider__stage
	height 100%
.owl-item
	height 100%

.slider__item
	height 100%
	background-repeat no-repeat
	background-size cover
.owl-item
	position relative
	float left
	min-height 1px
	-webkit-backface-visibility hidden
	-webkit-touch-callout none
	-webkit-tap-highlight-color transparent
.slider__prev
	background-image url(/icons/arrow.png)
	transform	rotate(-180deg)
.slider__next
	position absolute
	right 0
	background-image url(/icons/arrow.png)
.slider__nav
	position absolute
	top 50%
	left -7%
	width 115%
	height 115px
	transform translateY(-50%)
	button
		border none
	button
		width 11px
		height 45px
.slider-main
	.slider__dots
		position absolute
		top 50%
		left 6.1%
		transform translateY(-50%)
		.slider__dot
			display block
.slider_type_apartment
	margin-top 20px
	margin-left 30px
